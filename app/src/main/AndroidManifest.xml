<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="ph.kirig.budgetapp">

    <dist:module dist:instant="true" />

    <application
        android:name=".KirigApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".CurrencyListActivity"
            android:label="@string/title_currency_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CurrencyDetailActivity"
            android:label="@string/title_currency_detail"
            android:parentActivityName=".CurrencyListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ph.kirig.budgetapp.CurrencyListActivity" />
        </activity>
        <activity android:name=".AddCurrencyActivity" />
        <activity android:name=".AddAccountActivity" />
        <activity android:name=".AddTransactionActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>